<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TodoREST.TodoItemPage" 
			 Title="Todo">
	<StackLayout Margin="20">
		<Label Text="Name" />
		<Entry Text="{Binding Path=Nombre}" 
               Placeholder="Enter item" />
		<Label Text="Notes" />
		<Entry Text="{Binding Path=Sinopsis}"
               Placeholder="Enter notes" />
		<Label Text="Done" />
         <DatePicker x:Name="SelectorFecha"
                    MinimumDate="02, 14, 1999"
                    Date="{Binding Path=Valor_fecha}"
                    Margin="30, 0, 0, 30"
                    DateSelected="CovertirFecha" />
        <Label Text="{Binding Path=Puntuacion}" />
        <Slider Minimum="0" Maximum="100" ValueChanged="RegPuntucion"
                Value="{Binding Path=Puntuacion_Double}" />
        <Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
		<Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />
		<Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />
	</StackLayout>
</ContentPage>
